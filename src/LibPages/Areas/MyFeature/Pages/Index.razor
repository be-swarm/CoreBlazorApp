@page "/"


@using Microsoft.Extensions.Localization;
@using BeSwarm.CoreBlazorApp.Components
@using LibPages.Resources
@inject ConfirmDialogService confirmservice;
@inject NavigationManager NavigationManager;
@namespace LibPages.Areas.MyFeature.Pages


<PageTitle>Index</PageTitle>
<LoginButton></LoginButton>

<SelectLang></SelectLang>

<EditForm Model="@model" OnValidSubmit="@SubmitValidForm">
	<BeSwarm.Validator.BlazorValidator ValidateContext="_validatorContext" />
	<BeSwarm.CoreBlazorApp.Components.InputText @bind-Value="@model.Name" Label=@app.Name() ValidateProperty="@(()=>model.Name)" />
	<BeSwarm.CoreBlazorApp.Components.InputText @bind-Value="@model.FirstName" Label=@app.FirstName() ValidateProperty="@(()=>model.FirstName)" ValidateStrict="true" />
	<BeSwarm.CoreBlazorApp.Components.InputInteger @bind-Value="@model.Age" Label=@app.Age() ValidateProperty="@(()=>model.Age)" ValidateStrict="true" />
	<BeSwarm.CoreBlazorApp.Components.InputSliderInteger @bind-Value="@model.Age" Label=@app.Age() ValidateProperty="@(()=>model.Age)" ValidateStrict="true" />
	<BeSwarm.CoreBlazorApp.Components.InputDecimal @bind-Value="@model.Weight" Label=@app.Weight() Step="0.5m" ValidateProperty="@(()=>model.Weight)" />
	<BeSwarm.CoreBlazorApp.Components.InputSliderDecimal @bind-Value="@model.Weight" Label=@app.Weight() Step="0.5m" ValidateProperty="@(()=>model.Weight)" ValidateStrict="true" />
	<BeSwarm.CoreBlazorApp.Components.InputDate @bind-Value="@model.Date" Label=@app.Date() ValidateProperty="@(()=>model.Date)"  />
	<BeSwarm.CoreBlazorApp.Components.InputTime @bind-Value="@model.Date" Label=@app.Time() ValidateProperty="@(()=>model.Date)" />
	
</EditForm>

<MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="ShowError">@app.PromptError()</MudButton>
<MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="ShowDialog" >@app.PromptDialog()</MudButton>@status
@*<MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="CallSomeWebApi">Call WebApi</MudButton>@status
*@

<MudChip Variant="Variant.Outlined" Color="Color.Info"><SetDarkTheme />@app.DarkTheme()</MudChip>
<BeSwarm.CoreBlazorApp.Components.TracesHttp></BeSwarm.CoreBlazorApp.Components.TracesHttp>

